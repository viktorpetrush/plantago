<table class="table table-responsive table-condensed">
  <tbody>
    <% @apparat.contacts.map do |contact| %>
      <tr>
        <td><%= link_to contact.name, company_contact_path(contact.company, contact) %></td>
        <td><%= contact.phone %></td>
        <% if policy(@apparat).remove_contact? %>
          <td><%= link_to "-", remove_contact_apparat_path(@apparat, contact_id: contact.id), class: "btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <% if policy(@apparat).add_contact? and !@apparat.not_added_contacts.empty? %>
    <%= form_tag add_contact_apparat_path(@apparat), method: :patch do %>
        <%= select_tag :contact_id, options_for_select(@apparat.not_added_contacts.map{|c| [c.name, c.id]}), class: "form-control input-sm col-xs-3" %>
        <%= submit_tag "Додати контакт", class: "btn btn-md btn-success" %>
    <% end %>
  <% end %>
  <% if policy(Contact).create? %>
      <%= link_to("Створити новий", new_company_contact_url(@apparat.company), class: "btn btn-info btn-md") %>
  <% end %>
