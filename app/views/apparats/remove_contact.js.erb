$(".remove-contact-from-list").bind("ajax:success", function() {
    itemId = $(this).data("id");
    $("#contacts-list-item-"+itemId).remove();
    $(".append-contact-form").html("<%= j(render "contact_selection") %>");
});

$(".contact-buttons span#notice")
  .html("Контакт відкріплено.")
  .fadeIn()
  .delay(1000)
  .fadeOut();
