<% if current_user.admin? %>
  <p class="text-left"><%= link_to "New Apparat", new_apparat_path, class: "btn btn-default btn-sm" %></p>
<% end %>
<div class="table-responsive">
  <table class="table table-stripped table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Company</th>
        <th>Serial #</th>
        <th>Type</th>
        <th>Contact</th>
        <th>IP Address</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @apparats %>
     </tbody>
  </table>
</div> 
