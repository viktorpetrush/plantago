<div class="form-inline">
  <%= form_for([@user, @user.companies_permits.build]) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :company_id %>
        <%= f.select(:company_id, @user.not_permited_companies.map {|company| [company.name, company.id]}, class: "form-control") %>
      </div>
      <div class="form-group">
        <%= f.label :role %>
        <%= f.select :role, CompaniesPermit.roles.keys, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "New Permit", class: "btn btn-xs btn-success" %>
      </div>
  <% end %>
</div>
