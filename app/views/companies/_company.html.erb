<tr>
  <td><%= company.id  %></td>
  <td><%= company.name  %></td>
  <td><%= company.phone  %></td>
  <td><%= company.description %></td>
  <td>
    <% if policy(company).show? %>
      <%= link_to "Дивитися", company_path(company), class: "btn btn-info btn-xs" %>
    <% end %>
    <% if policy(company).edit? %>
      <%= link_to "Редагувати", edit_company_path(company), class: "btn btn-success btn-xs" %>
    <% end %>
    <% if policy(company).destroy? %>
      <%= link_to "Видалити", company, method: :delete, data: {confirm: "Впевнений що хочеш видалити компанію?"}, class: "btn btn-danger btn-xs" %>
    <% end %>
  </td>
</tr>
 
