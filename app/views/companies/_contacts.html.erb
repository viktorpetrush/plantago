<h2>Контакти: </h2>
<ul>
  <% @company.contacts.each do |contact| %>
    <li>
      <% if policy(contact).update? %>
        <%= link_to contact.name, edit_company_contact_url(@company, contact) %>
      <% else %>
        <%= link_to contact.name, company_contact_url(@company, contact) %>
      <% end %>
      <%= contact.phone %>
      <% if contact.default %>
         (основний)
      <% end %>
      <% if policy(contact).destroy? %>
        <%= link_to "x", company_contact_path(@company, contact),
            method: :delete,
            data: { confirm: "Видалити контакт?" },
            class: "btn btn-danger btn-xs" %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to "Новий контакт", new_company_contact_url(@company), class: "btn btn-xs btn-primary" %></li>
