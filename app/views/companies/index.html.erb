<p class="text-left"><%= link_to "New Company", new_company_path, class: "btn btn-default btn-sm" %></p>
<div class="table-responsive">
  <table class="table table-stripped table-hover table-condensed">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Description</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.id  %></td>
          <td><%= company.name  %></td>
          <td><%= company.phone  %></td>
          <td><%= company.description %></td>
          <td>
            <%= link_to "Show", company_path(company), class: "btn btn-info btn-xs" %>
            <%= link_to "Edit", edit_company_path(company), class: "btn btn-success btn-xs" %>
            <%= link_to "Delete", company, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
