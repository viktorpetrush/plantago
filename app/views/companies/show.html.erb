<div class="text-left">
  <table class="table table-stripped table-hover table-condensed">
    <tbody>
      <tr>
        <td class="col-md-2"><strong>Name: </strong></td>
        <td><%= @company.name %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Phone: </strong></td>
        <td><%= @company.phone %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Description: </strong></td>
        <td><%= simple_format(@company.description) %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Apparats: </strong></td>
        <td>
          <% @company.apparats.each do |apparat| %>
            <%= link_to apparat.name, apparat %> 
          <% end %>
        </td>
      </tr>
      <% if current_user.admin? %>
        <tr>
          <td class="col-md-2"><strong>Users: </strong></td>
          <td>
            <% @company.users.each do |user| %>
              <%= link_to user.name, user %> 
              <%= user.companies_permits.find_by(company: @company).role %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%= link_to "All Companies", companies_path, class: "btn btn-default" %>
    <% if policy(@company).edit? %>
      <%= link_to "Edit", edit_company_path(@company), class: "btn btn-warning" %>
    <% end %>
    <% if policy(@company).destroy? %> 
      <%= link_to "Delete", @company, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <% end %>
  </p>
</div>

