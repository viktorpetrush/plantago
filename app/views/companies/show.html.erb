<div class="text-left">
  <p>Твоя роль на компанії: <strong><%= current_role @company %></strong></p>
  <table class="table table-stripped table-hover table-condensed">
    <tbody>
      <tr>
        <td class="col-md-2"><strong>Назва: </strong></td>
        <td><%= @company.name %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Телефон: </strong></td>
        <td><%= @company.phone %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Опис: </strong></td>
        <td><%= simple_format(@company.description) %></td>
      </tr>
      <tr>
        <td class="col-md-2"><strong>Пристрої: </strong></td>
        <td>
          <% @company.apparats.each do |apparat| %>
            <%= link_to apparat.name, apparat %> 
          <% end %>
        </td>
      </tr>
      <% if @company.contacts.any? %>
        <tr>
          <td class="col-md-2"><strong>Контакти:</strong></td>
          <td>
            <% @company.contacts.each do |contact| %>
              <%= link_to contact.name, company_contact_url(contact) %>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if current_user.admin? %>
        <tr>
          <td class="col-md-2"><strong>Інженери: </strong></td>
          <td>
            <% @company.users.each do |user| %>
              <%= link_to user.name, user %> 
              <%= user.companies_permits.find_by(company: @company).role %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <% if policy(@company).edit? %>
      <%= link_to "Редагувати", edit_company_path(@company), class: "btn btn-warning" %>
    <% end %>
    <% if policy(@company).destroy? %> 
      <%= link_to "Видалити", @company, method: :delete, data: { confirm: "Впевнений що хочеш видати компанію?" }, class: "btn btn-danger" %>
    <% end %>
  </p>
</div>

