<div class="main-page">
  <%= form_for @company do |f| %>
    <div class="information">
      <div class="container">
        <%= render "shared/error_messages", object: @company %>
        
        <div class="row">
          <div class="col-md-4 col-sm-4">
            <h2><%= f.label :name, "Назва" %></h2>
            <%= f.text_field :name, class: "whitebox"%>
          </div>

          <div class="col-md-4 col-sm-4">
            <h2><%= f.label :phone, "Телефон" %></h2>
            <%= f.text_field :phone, class: "whitebox" %>
          </div>
        </div>

        <% if @company.id %>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <%= render "contacts" %>
          </div>
          <div class="col-md-6 col-sm-6">
            <%= render "users" %>
          </div>
        </div>
        <% end %>

        <div>
          <h2><%= f.label :description, "Опис" %></h2>
          <%= f.text_area :description, rows: "10", class: "whitebox" %>
        </div>
      </div>
    </div>

    <div class="container">
      <% if @company.id && policy(@company).destroy? %> 
        <%= link_to "Видалити", @company, method: :delete, data: { confirm: "Впевнений що хочеш видати компанію?" }, class: "btn btn-danger pull-right" %>
      <% end %>
      <%= f.submit yield(:button_text), class: "btn btn-default pull-right" %>
    </div>
  <% end %>
</div>
