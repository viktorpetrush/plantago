<div class="starter-template">
  <h1>List of all users in this app</h1>
  <%- if current_user %> 
    <h2>You are <%= current_user.name %> </h2>
  <% end -%>
  </div>
<div class="table-responsive">
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Current IP</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.current_sign_in_ip %></td>
          <td>superman</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

