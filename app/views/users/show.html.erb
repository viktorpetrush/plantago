<div class="text-left">
  <h1 style="text-align: center;">Personal user information</h1>
  <table class="table">
    <tbody>
      <tr>
        <td><strong>Name:</strong> <%= @user.name %></td>
        <td><strong>Email:</strong> <%= @user.email %></td>
        <td><strong>Last sign in IP:</strong> <%= @user.current_sign_in_ip %></td>
        <% if @user.admin %>
           <td><strong>Admin:</strong> <%= @user.admin %></td>
        <% end %>
      </tr>
    </tbody> 
  </table>
  <% if current_user.admin? and @user != current_user  %>
    <%= link_to "Delete User", user_path(@user), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger btn-xs" %>
  <%end %>

  <div class="row">
    <div class="col-xs-6">
      <% if @user.apparats.any? %>
        <h2>Maintained Apparats</h2>
        <table class="table">
          <tbody>
            <% @apparats.each do |apparat| %>
              <tr>
                <td><strong><%= link_to apparat.apparat.name, apparat.apparat %>:</strong></td>
                <td><%= apparat.role %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
    <div class="col-md-6">
      <% if @user.companies.any? %>
        <h2>Maintained Companies</h2>
        <table class="table">
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><strong><%= link_to company.company.name, company.company %>:</strong></td>
                <td><%= company.role %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
