<div class="row"> 
  <div class="col-sm-6 col-sm-offset-3 grey-back">
    <%= form_for @user do |f| %>
      <%= render "error_messages", object: @user %>
      <div class="form-group text-left">
        <%= f.label :name, "Ім'я" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :email, "Пошта" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group text-left">
        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="ckeckbox text-left">
        <%= f.check_box :admin %>
        <%= f.label :admin, "Адміністратор" %>
      </div>
      <div>
        <%= f.submit yield(:button_text), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
