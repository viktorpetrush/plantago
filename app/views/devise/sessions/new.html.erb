<div class="row">
  <div class="col-sm-6 col-sm-offset-3 grey-back">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group text-left">
        <%= f.label :email, "Пошта" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true %>
      </div>
      <div class="form-group text-left">
        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
      </div>
      <div class="ckeckbox text-left">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Запам'ятати" %>
        <% end -%>
      </div>
      <%= f.submit "Увійти", class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
