$(".apparat-permits-users-list").append("<%= j(render @apparats_permit) %>");
$("select#user [value='<%= @apparats_permit.user.id %>']").remove();
if ($(".append-user-form select#user option").size() == 0) {
  $(".append-user-form").hide();
} else {
  $(".append-user-form").show();
}

$(".user-buttons span#notice")
  .html("Дозвіл створено.")
  .fadeIn()
  .delay(1000)
  .fadeOut();
