<%= form_for(@apparats_permit) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :user_id %>
  <%= f.select(:user_id, [[@user.name, @user.id]]) %>
  <%= f.label :apparat_id %>
  <%= f.select(:apparat_id, @user.not_permited_apparats.map {|apparat| ["#{apparat.id} | #{apparat.name}", apparat.id]}) %>
  <%= f.label :role %>
  <%= f.select :role, ApparatsPermit.roles.keys %>
  <%= f.submit %>
<% end %>


