<div class="form-inline">
  <%= form_for([@user, @user.apparats_permits.build]) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label :apparat_id %>
      <%= f.select(:apparat_id, @user.not_permited_apparats.map {|apparat| ["#{apparat.id} | #{apparat.name}", apparat.id]}, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= f.label :role %>
      <%= f.select :role, ApparatsPermit.roles.keys, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "New Permit", class: "btn btn-xs btn-success" %>
    </div>
  <% end %>
</div>


